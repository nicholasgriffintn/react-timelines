{
  "$schema": "https://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "bracketSameLine": false,
  "useTabs": false,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ".editorconfig",
      "options": {
        "parser": "yaml"
      }
    },
    {
      "files": "*.md",
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    }
  ]
}